# Should you change your keyboard layout some time, delete
# this file and re-run i3-config-wizard(1).
#

# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start rofi (dmenu replacement)
bindsym $mod+d exec rofi -show drun -modi drun#window#ssh -show-icons -drun-icon-theme Paper

# rofi calculator
bindsym $mod+c exec --no-startup-id calc

# start qutebrowser menu (web browser)
bindsym $mod+q exec qute-launcher

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
# bindsym $mod+d focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# move workspace to different monitor
bindsym $mod+Ctrl+Shift+Left move workspace to output left
bindsym $mod+Ctrl+Shift+Right move workspace to output right

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec [ "$(echo 'No|Yes' | rofi -dmenu -i -sep '|' -lines 2 -p 'Do you really want to exit i3?' -a 0 -u 1 -no-custom)" = "Yes" ] && i3-msg exit


# resize window (you can also use the mouse for that)
mode "resize" {
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	# back to normal: Enter or Escape or $mod+r
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

mode "passthrough" {
	bindsym $mod+Ctrl+Escape mode "default"
}

bindsym $mod+Ctrl+Escape mode "passthrough"

mode "swap" {
	# switch to workspace
	bindsym $mod+1 workspace $ws1
	bindsym $mod+2 workspace $ws2
	bindsym $mod+3 workspace $ws3
	bindsym $mod+4 workspace $ws4
	bindsym $mod+5 workspace $ws5
	bindsym $mod+6 workspace $ws6
	bindsym $mod+7 workspace $ws7
	bindsym $mod+8 workspace $ws8
	bindsym $mod+9 workspace $ws9
	bindsym $mod+0 workspace $ws10

	# change focus
	bindsym $mod+Left focus left
	bindsym $mod+Down focus down
	bindsym $mod+Up focus up
	bindsym $mod+Right focus right

	# change focus (without mod)
	bindsym Left focus left
	bindsym Down focus down
	bindsym Up focus up
	bindsym Right focus right

	bindsym Return swap container with mark "swapee"; unmark "swapee"; mode "default";
	bindsym Escape unmark "swapee"; mode "default";
}

bindsym $mod+Shift+i mark --add "swapee"; mode "swap"

# swap workspaces
bindsym $mod+Shift+o exec i3-swap-workspaces

# Launch polybar
exec_always --no-startup-id launch-polybar
bindsym $mod+Shift+p exec --no-startup-id launch-polybar

# disable window title bars for gaps to work correctly
for_window [class="^.*"] border pixel 2 

# enable gaps
gaps inner 10
gaps outer 10

# scratchpad
bindsym $mod+minus move scratchpad
bindsym $mod+plus scratchpad show; floating disable

# volume keys
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/bin/pactl-set-all-sink-volumes +5%
bindsym XF86AudioLowerVolume exec --no-startup-id ~/bin/pactl-set-all-sink-volumes -5%
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id ~/bin/pactl-set-all-sink-volumes +1%
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id ~/bin/pactl-set-all-sink-volumes -1%
bindsym XF86AudioMute exec --no-startup-id ~/bin/pactl-set-all-sink-volumes toggle-mute
bindsym Shift+XF86AudioMute exec --no-startup-id ~/bin/pactl-set-all-sink-volumes 0%

# brightness keys
bindsym XF86MonBrightnessUp exec --no-startup-id ~/bin/xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id ~/bin/xbacklight -dec 20 # decrease screen brightness
bindsym Shift+XF86MonBrightnessUp exec --no-startup-id ~/bin/xbacklight -inc 2 # slightly increase screen brightness
bindsym Shift+XF86MonBrightnessDown exec --no-startup-id ~/bin/xbacklight -dec 2 # slightly decrease screen brightness

# media keys (mpd)
bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioPrev exec --no-startup-id mpc prev
bindsym XF86AudioNext exec --no-startup-id mpc next

# screenshots
bindsym $mod+Shift+s exec --no-startup-id gnome-screenshot -ca
bindsym $mod+Shift+f exec --no-startup-id gnome-screenshot -af /tmp/screenshot.png

# Gnome Settings Daemons
exec --no-startup-id ~/bin/gnome-settings-daemon

# wallpaper
exec --no-startup-id ~/.fehbg

# compton
exec --no-startup-id compton

# i3lock
bindsym $mod+l exec ~/bin/i3lock-fancy
bindsym $mod+Shift+l exec ~/bin/i3lock-fancy && systemctl suspend

# battery monitor
exec --no-startup-id ~/bin/i3-battery-monitor

# network manager and bluetooth applet
exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet
