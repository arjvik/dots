#!/bin/bash

killall -q polybar

# Set thermal zone
echo "thermal-zone = `grep "." /sys/class/thermal/thermal_zone*/type | cut -c32,38- | grep "x86_pkg_temp" | cut -d":" -f1`" > ~/.config/polybar/thermal-zone


if xrandr | grep "DP-2 connected"; then
	polybar laptop-dual &
	polybar extern-dual &
else
	polybar laptop-single &
fi


